body,html,div,p,img,h1,h2,h3,h4,h5,h6 {
    padding:0;
    margin:0;
    border-width:0;
}
body,
html
 {
    height: 100%;
    width: 100%;
    text-align: center;
    background: transparent;
}
html {
    color: #000;
    font: 12px/1 "microsoft yahei" , Arial, sonti, Verdana, Geneva, Helvetica, sans-serif;
}
body {
    font-size: 100%;
    font-family: inherit;
}
table {
    border-collapse: collapse;
    border-spacing: 0;
}
div, img {
    box-sizing: border-box;
}
a {
    color:inherit;
    text-decoration: none;
    display: none;
}
a.jq-banner, .jq-banner a{
    display: initial
}
.logImg {
    width: 1px;
    height: 1px;
    position: absolute;
    left:0;
    top:0;
    opacity: 0;
}
.layout-area {
    padding: 0;
    margin: 0;
    display: table;
    height: 100%;
    table-layout: fixed;
}
a.jg-banner {
    color:inherit;
    text-decoration:none;
}
.jg-banner {
    display: block;
    width: 100%;
    height: 100%;
    position: relative;
    text-align: center;
    box-sizing: border-box;
}
.jg-banner .jq-container {
    display: table-cell;
    vertical-align: middle;
    width: 100%;
    height: 100%;
}

.jg-banner .btn-area .jg-btn:before {
    word-break: break-all;
    box-sizing: border-box;
    display: inline-block;
}
.no-image .image-area,
.no-image .icon-area {
    display: none;
}